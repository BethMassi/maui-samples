<?xml version="1.0" encoding="utf-8" ?>
<Button xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DeveloperBalance.Pages.Controls.AddButton"
    ImageSource="{StaticResource IconAdd}" 
    BackgroundColor="{StaticResource Primary}" 
    CornerRadius="25" 
    HeightRequest="50"
    Text="Add"
    TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource LightOnDarkBackground}}"
    Padding="20,10"
    VerticalOptions="End" 
    HorizontalOptions="End"
    Margin="30"
    SemanticProperties.Description="Add" />
